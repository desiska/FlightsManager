@model FlightsManager.Models.Reservation.ReservationCreateVM

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Eforlad travel</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- bootstrap css -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- style css -->
    <link rel="stylesheet" href="~/css/style.css">
    <!-- Responsive-->
    <link rel="stylesheet" href="~/css/responsive.css">
    <!-- fevicon -->
    <link rel="icon" href="~/images/fevicon.png" type="image/gif" />
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="~/css/jquery.mCustomScrollbar.min.css">
    <!-- Tweaks for older IEs-->
    <!-- owl stylesheets -->
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<!-- body -->
<body class="main-layout">
    <!-- loader  -->
    <div class="loader_bg">
        <div class="loader"><img src="~/images/loading.gif" alt="#" /></div>
    </div>
    <!-- end loader -->
    <section>
        <div class="banner-main">
            <img src="~/images/nicePlane.jpg" alt="#" />
            <div class="container">
                <div class="text-bg">
                </div>
            </div>
                    <div class="container">
                        <form asp-action="Create" asp-controller="Reservation" method="post" class="main-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <h3>Reservation</h3>
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="row">
                                        @for (int i = 0; i < Model.Reservations.Length; i++)
                                        {
                                            <div class="row">
                                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                                                <label asp-for="Reservations[i].FirstName" class="control-label">First Name</label>
                                                <input asp-for="Reservations[i].FirstName" class="form-control" />
                                                <span asp-validation-for="Reservations[i].FirstName" class="text-danger"></span>
                                            </div>
                                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                                                <label asp-for="Reservations[i].MiddleName" class="control-label">Middle Name</label>
                                                <input asp-for="Reservations[i].MiddleName" class="form-control" />
                                                <span asp-validation-for="Reservations[i].MiddleName" class="text-danger"></span>
                                            </div>
                                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                                                <label asp-for="Reservations[i].LastName" class="control-label">Last Name</label>
                                                <input asp-for="Reservations[i].LastName" class="form-control" />
                                                <span asp-validation-for="Reservations[i].LastName" class="text-danger"></span>
                                            </div>
                                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                                                <label asp-for="Reservations[i].Nationality" class="control-label">Nationality</label>
                                                <input asp-for="Reservations[i].Nationality" class="form-control" />
                                                <span asp-validation-for="Reservations[i].Nationality" class="text-danger"></span>
                                            </div>
                                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                                                <label asp-for="Reservations[i].PIN" class="control-label">PIN</label>
                                                <input asp-for="Reservations[i].PIN" class="form-control" />
                                                <span asp-validation-for="Reservations[i].PIN" class="text-danger"></span>
                                            </div>
                                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                                                <label asp-for="Reservations[i].TelephoneNumber" class="control-label">Telephone Number</label>
                                                <input asp-for="Reservations[i].TelephoneNumber" class="form-control" />
                                                <span asp-validation-for="Reservations[i].TelephoneNumber" class="text-danger"></span>
                                            </div>
                                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                                                <label asp-for="Reservations[i].TicketType" class="control-label">Ticket Type</label>
                                                <select hidden asp-for="Reservations[i].TicketType" class="form-control">
                                                    <option value="Ordinary">Ordinary</option>
                                                    <option value="Business">Business</option>
                                                </select>
                                                <span asp-validation-for="Reservations[i].TicketType" class="text-danger"></span>
                                            </div>
                                            </div>
                                        }
                                    <div class="row">
                                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                                            <label asp-for="Email" class="control-label">Email</label>
                                            <input asp-for="Email" class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12">
                                            <label asp-for="Flight" class="control-label">Flight</label>
                                            <select hidden asp-for="Flight" class="form-control">
                                                @foreach (var item in Model.Flights)
                                                {
                                                    <option value="@item.AirplaneID">@item.ToString()</option>
                                                }
                                            </select>
                                        </div>

                                        @if (!Model.IsFirstTime)
                                        {
                                            <div class="alert">
                                                <p>@Model.Message</p>
                                            </div>
                                        }
                                    </div>
                                        <div class="row">
                                            <input type="submit" value="Create" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
        </div>
    </section>
    <!-- about -->
    <div id="about" class="about">
        <div class="container">
            <div class="row">
                <div class="col-md-12 ">
                    <div class="titlepage">
                        <h2>About  our travel agency</h2>
